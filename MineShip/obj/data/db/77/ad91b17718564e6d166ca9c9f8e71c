/// <summary>
/// Defines the structures for shadow mapping.
/// </summary>
class ShadowMapBase : ShadowBase
{
    struct ShadowMapLevelReceiverInfo
    {
        matrix ShadowMapWVP;
        float4 CascadeTextureCoordsBorder;
        float3 ShadowLightOffset;
    };

    struct ShadowMapReceiverInfo
    {
        float3 ShadowLightDirection;
        float ShadowMapDistance;
    };
};