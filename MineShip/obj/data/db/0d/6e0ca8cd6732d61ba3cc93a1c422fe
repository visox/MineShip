//class ComputeColorMultiplyWeighted : ComputeColor
class ComputeColorMultiplyMaya : ComputeColor
{
    ComputeColor color1;
    ComputeColor color2;

    override float4 Compute()
    {
        float4 backColor = color1.Compute();
        float4 frontColor = color2.Compute();

        // From Maya API (LayeredTexture node)
        //
        // b = background, f = foreground, c = color, a = alpha
        //
        //  Multiply:
        //      color = bc * (fc * fa + 1 - fa)
        //      alpha = ba
        
        return float4(backColor.rgb * (frontColor.rgb * frontColor.a + 1.0f - frontColor.a),
                      backColor.a);
                      
        //return float4(backColor.rgb * lerp(float3(1.0f, 1.0f, 1.0f), frontColor.rgb, frontColor.a), backColor.a);
    }
};
